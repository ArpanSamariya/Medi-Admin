            <!-- list of pharmacies starts here -->
            <div class="row">
                    <div class="col-sm-12">
                      <div class="panel panel-default panel-table">
                        <div class="panel-heading">Pharmacy List
                          <div class="tools"><span class="icon mdi mdi-download"></span><span class="icon mdi mdi-more-vert"></span></div>
                        </div>
                        <div class="panel-body">
                          <table id="table1" class="table table-striped table-hover table-fw-widget">
                            <thead>
                            <tr>
                                <th>Pharmacy <br></th>
                                <th>Total Orders <br></th>
                                <th>Total Order Amount <br>(in Rs)</th>
                                <th>Amount Paid <br>(in Rs)</th>	
                                <th>Amount Balance <br>(in Rs)</th>
                                <th>Returns Amount <br>(in Rs)</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% pharmacy_list.forEach( function (pharmacy) { %>
                              <tr>
                                <td> <a href="/pharmacy/<%= pharmacy.id %>"><%= pharmacy.name %></a></td>
                                <td><%= pharmacy.totalOrders %></td>
                                <td><%=  pharmacy.totalAmount %></td>
                                <td><%= pharmacy.paidAmount %></td>
                                <td><%= pharmacy.balanceAmount %></td>
                                <td><%= pharmacy.returnAmount %></td>
                              </tr>
                              <% }) %>                    
                            </tbody>
                          </table>
                        </div>
                      </div>
                    </div>
                  </div>
