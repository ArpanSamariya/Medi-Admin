        <div class="main-content container-fluid">
          <div class="row">
            <div class="col-sm-12">
              <div class="panel panel-default panel-table">
                <div class="panel-heading">Medicento Inventory
                  <div class="tools"><span class="icon mdi mdi-download"></span><span class="icon mdi mdi-more-vert"></span></div>
                </div>
                <div class="panel-body">
                  <table id="table1" class="table table-striped table-hover table-fw-widget">
                    <thead>
                    <tr>
                        <th>Product-Id</th>
                        <th>Product Name</th>
						<th>Company Name</th>	
                        <th>Stock</th>
                        <th>Amount</th>
                    </tr>
                    </thead>
                    <tbody>
					<% pros.forEach(function(pro) { %>
                      <tr>
                        <td><%= pro.inventory_product_id._id %></td>
                        <td><%= pro.product_id.medicento_name %></td>
						<td><%= pro.product_id.company_name %></td>
                        <td><%= pro.product_id.total_stock %></td>
                        <td>Rs. <%= pro.inventory_product_id.price_to_seller %></td>
                      </tr>
					  <% }) %>                    
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
